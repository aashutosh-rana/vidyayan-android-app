<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bodyfragment.StudyFragment"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:id="@+id/txt_schedule"
        android:textColor="#BDBCBC"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/study_recyclerView_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Courses"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:id="@+id/txt_schedule2"
        android:textColor="#BDBCBC"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/study_recyclerView_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"/>
</LinearLayout>
</ScrollView>