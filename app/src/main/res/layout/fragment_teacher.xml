<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bodyfragment.TeacherFragment"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/etSearchteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="2dp"
        android:hint="search teacher"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your's Teachers"
    android:layout_below="@+id/etSearchteacher"
    android:layout_marginTop="16dp"
    android:id="@+id/eteacher"
    android:layout_centerHorizontal="true"
    android:textSize="30sp"
    android:textColor="#171616"
    android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teachers_list"
            android:layout_margin="10dp"
            android:layout_below="@+id/eteacher"/>
    </RelativeLayout>
</ScrollView>