<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="220dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:background="@drawable/new_background"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_Student_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">


            <ImageView
                android:id="@+id/teacher_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_Student_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Krishna Jaiswal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_teacher"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="10dp"
            android:text="C Programming"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>