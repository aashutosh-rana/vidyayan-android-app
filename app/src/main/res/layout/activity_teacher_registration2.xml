<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationpage"
    tools:context=".activity.TeacherRegistrationActivity2"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

             <com.google.android.material.textfield.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="2"
                android:maxLength="50"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:hint="Name" />

             </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <com.hbb20.CountryCodePicker
                     android:id="@+id/countryCode"
                     android:layout_marginTop="15dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_number"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:inputType="number"
                         android:maxLength="10"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Number" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_email"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="textEmailAddress"
                         android:maxLines="1"
                         android:maxLength="50"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Email" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_dob"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="date"
                         android:maxLines="1"
                         android:maxLength="10"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Date of birth"/>

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

                 <ImageButton
                     android:id="@+id/btnDob"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="25dp"
                     android:layout_centerVertical="true"
                     android:background="@color/colorAccent"
                     android:src="@drawable/ic_date_picker"
                     android:tint="#ffffff" />


             </RelativeLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_gender"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:maxLines="1"
                         android:maxLength="15"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Gender" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_address"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:maxLines="1"
                         android:maxLength="15"
                         android:drawableEnd="@drawable/location"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Address" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>


             <ImageButton
                 android:id="@+id/imgBtnTeacherRegister"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="15dp"
                 android:background="#ffffff"
                 android:src="@drawable/registerbtn" />

             <RelativeLayout
                 android:layout_gravity="bottom|center_horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="15dp">
                 <ImageButton
                     android:id="@+id/imgBtnLogin"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="30dp"
                     android:layout_centerHorizontal="true"
                     android:background="#ffffff"
                     android:src="@drawable/loginn"/>

                 <TextView
                     android:layout_below="@+id/imgBtnLogin"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:layout_gravity="center_horizontal"
                     android:text="@string/already_registered"/>

             </RelativeLayout>

         </LinearLayout>


</LinearLayout>
</androidx.core.widget.NestedScrollView>



