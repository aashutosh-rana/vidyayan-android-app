<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".teacher.starter.activity.TeacherRegistrationActivity2">

<LinearLayout
    android:background="@drawable/registrationpagebackgroundsecond"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

             <com.google.android.material.textfield.TextInputLayout
                 android:id="@+id/et_teacher_name1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="2"
                android:maxLength="50"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:hint="Name" />

             </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/et_teacher_email1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_email"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="textEmailAddress"
                         android:maxLines="1"
                         android:maxLength="50"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Email" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/et_teacher_dob1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_dob"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="date"
                         android:maxLines="1"
                         android:maxLength="10"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Date of birth"/>

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

                 <ImageButton
                     android:id="@+id/btnDob"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="25dp"
                     android:layout_centerVertical="true"
                     android:background="@color/colorAccent"
                     android:src="@drawable/ic_date_picker"
                     android:tint="#ffffff" />


             </RelativeLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/et_teacher_gender1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_gender"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:maxLines="1"
                         android:maxLength="15"
                         android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Gender" />

                 </com.google.android.material.textfield.TextInputLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/et_teacher_address1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/et_teacher_address"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="text"
                         android:maxLines="1"
                         android:drawableEnd="@drawable/location"
                         android:layout_centerHorizontal="true"
                         android:layout_marginHorizontal="20dp"
                         android:hint="Address" />

                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                     android:id="@+id/txtSelectCity"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_marginHorizontal="20dp"
                     android:layout_marginTop="10dp"
                     android:background="@android:drawable/editbox_background"
                     android:drawablePadding="20dp"
                     android:gravity="center"
                     android:padding="10dp"
                     android:text="Select City"
                     android:textColor="#000000"
                     android:textSize="20sp" />


             </LinearLayout>
             <ImageButton
                 android:id="@+id/imgBtnTeacherRegister"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="15dp"
                 android:background="#ffffff"
                 android:src="@drawable/registerbtn" />
         </LinearLayout>
</LinearLayout>
</ScrollView>