<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/new_background"
    android:weightSum="5"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="6dp"
    android:orientation="vertical"
    android:id="@+id/llt">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="7dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/student_profile"
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/student_pics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/name_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashutosh Kumar"
            android:layout_toRightOf="@id/student_profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textColor="#15151B"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/student_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_student"
            android:text="class 10"
            android:layout_toRightOf="@id/student_profile"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp"
            android:textColor="#E1AC23"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/student_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BCE,Sabour,Bhagalpur"
            android:layout_below="@id/student_class"
            android:layout_toRightOf="@id/student_profile"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            android:textColor="#F28511"
            android:textSize="10sp"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/design_try"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        >
        <TextView
            android:id="@+id/one"
            android:layout_width="260dp"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:layout_height="wrap_content"
            android:text="Prefer online mode of education"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"/>
        <TextView
            android:id="@+id/two"
            android:layout_width="260dp"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:layout_height="wrap_content"
            android:text="Want to study physich and math"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/one"/>
        <TextView
            android:id="@+id/three"
            android:layout_width="260dp"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:layout_height="wrap_content"
            android:text="Available for study between 6-9 in evening"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/two"/>
        <TextView
            android:id="@+id/four"
            android:layout_width="260dp"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:layout_height="wrap_content"
            android:text="Can pay up to Rs 1000"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/three"/>

    </RelativeLayout>


</LinearLayout>