<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
   android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
                    android:id="@+id/teacher_profile"
                    android:layout_width="170dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="50dp"
            android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:id="@+id/imgTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tp"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/teacher_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="18sp"
                android:textColor="#15151B"
                android:textStyle="bold"/>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/txtTeacherGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade"
                    android:textColor="#15151B"/>

            </LinearLayout>

                <TextView
                    android:id="@+id/txtTeacherTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing"
                    android:layout_marginTop="5dp"
                    android:textColor="#E1AC23"
                    android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/design_try"
                android:layout_height="10dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTeacherName"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"/>
        <TextView
            android:id="@+id/txtTeacherSubject"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/txtTeacherName"/>
        <TextView
            android:id="@+id/txtQualification"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Highest qualification"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/txtTeacherSubject"/>

    </RelativeLayout>

    <RatingBar
        android:scaleY="0.5"
        android:scaleX="0.5"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:isIndicator="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<Button
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:text="Send Request"
    android:textAllCaps="false"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/kathai"
    android:background="@android:color/holo_orange_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Send Request"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/kathai"
            android:background="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
      <!--  <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Demo Video"
            android:background="@drawable/startlearningbackground"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/kathai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />-->
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
