<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/darker_gray"
   android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:id="@+id/llt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
                    android:id="@+id/teacher_profile"
                    android:layout_width="170dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="50dp"
            android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:id="@+id/imgTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tp"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/teacher_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashutosh Kumar"
                android:textColor="#15151B"
                android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTeacherClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="class 10"
                    android:layout_marginTop="5dp"
                    android:textColor="#E1AC23"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txtTeacherAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BCE,Sabour,Bhagalpur"
                    android:layout_marginTop="5dp"
                    android:textColor="#F28511"
                    android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/design_try"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/txtMode"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Mode of teaching"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            app:drawableStartCompat="@drawable/ic_baseline_star_24" />
        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/txtMode"
            app:drawableStartCompat="@drawable/ic_baseline_star_24" />
        <TextView
            android:id="@+id/txtTiming"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Timing of teaching"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/txtSubject"
            app:drawableStartCompat="@drawable/ic_baseline_star_24" />
        <TextView
            android:id="@+id/txtPriceRange"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Price range"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:layout_below="@id/txtTiming"
            app:drawableStartCompat="@drawable/ic_baseline_star_24" />

    </RelativeLayout>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="250dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>
</androidx.cardview.widget.CardView>
