<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Claas6thTo10thFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtSelectBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="2.Select your board"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/txtSelectBoard"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <TextView
            android:id="@+id/txtCBSE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/rounded_corners_imagebutton"
            android:gravity="center"
            android:padding="10dp"
            android:text="CBSE"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtICSE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/rounded_corners_imagebutton"
            android:gravity="center"
            android:padding="10dp"
            android:text="ICSE"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtSTATE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/rounded_corners_imagebutton"
            android:gravity="center"
            android:padding="10dp"
            android:text="STATE"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>